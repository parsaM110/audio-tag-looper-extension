{
    "manifest_version": 3,
    "name": "Audio Tag Looper",
    "version": "1.0",
    "description": "Adds loop functionality to all audio tags on a webpage.",
    "author": "parsa momeni",
    "permissions": [
    "activeTab", 
    "scripting", 
    "storage"
  ],
    "host_permissions": ["<all_urls>"],
    "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon-gray.png",
      "48": "icon-gray.png",
      "128": "icon-gray.png"
    }
  }
  }
  